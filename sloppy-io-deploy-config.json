{
    "project": "bookmarks-for-spotify",
    "services": [
        {
            "id": "frontend",
            "apps": [
                {
                    "id": "app-server",
                    "domain": {
                        "uri": "$domain"
                    },
                    "mem": 128,
                    "image": "$dockerhub-repository:$version",
                    "instances": 2,
                    "port_mappings": [
                        {
                            "container_port": 80
                        }
                    ],
                    "env": {
                        "HAPROXY_0_REDIRECT_TO_HTTPS": "true"
                    }
                }
            ]
        }
    ]
}
